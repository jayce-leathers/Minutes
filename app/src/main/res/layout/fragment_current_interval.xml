        <!--android:id="@+id/tvOffTime"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/tvOnTime"-->
        <!--android:layout_alignStart="@+id/tvOnTime"-->
        <!--android:text="00:30"-->
        <!--android:textSize="40dp"/>-->

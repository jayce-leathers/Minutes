<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apps.jayceleathers.me.fragments.CurrentIntervalFragment">

    <TextView
        android:id="@+id/tvCurrentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="REST"
        android:textSize="100dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tvCurrentTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvCurrentLabel"
        android:text="00:35"
        android:textSize="100dp"
        android:textStyle="bold"
        android:textColor="@color/logo_color"/>
    <TextView
        android:id="@+id/tvOnTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCurrentTimer"
        android:layout_alignStart="@+id/tvCurrentTimer"

        android:text="01:00"
        android:textSize="40dp"/>
    <TextView
        android:id="@+id/tvOnTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvCurrentTimer"
        android:layout_below="@+id/tvCurrentTimer"

        android:text="@string/on_time_label_text"
        android:textSize="40dp"/>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:layout_toLeftOf="@+id/center"
        android:text="Situps"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"></LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvLabel"
        android:orientation="vertical"
        android:paddingLeft="30dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvWorkTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="WORK"/>
            <TextView
                android:id="@+id/tvWorkTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvWorkTimeLabel"
                android:text="01:00"/>
            <TextView
                android:id="@+id/tvRestTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWorkTimeLabel"
                android:text="REST"/>
            <TextView
                android:id="@+id/tvRestTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tvWorkTime"
                android:layout_below="@+id/tvWorkTime"
                android:text="00:30"/>
          </RelativeLayout>
    </LinearLayout>

</RelativeLayout>